body {
  background: fixed url('<%= image_path('background.jpg') %>') center top;
  font-family: 'Bariol', sans-serif;
  color: #FFF;
}

a,
a:active,
a:visited,
a:hover {
  color: #FFF;
}

a:hover {
  text-decoration: none;
}

ul {
  list-style: none;
  padding: 0;
}

.container {
  margin: 0 auto;
  width: 1000px;
}

.change-our-country {
  position: fixed;
  margin-top: 90px;
  padding: 20px;
  width: 323px;
}

  .idea {
    display: block;
    margin-bottom: 20px;
    font-size: 1.2em;
    text-align: center;
    text-shadow: 1px 1px 2px #000;
  }

  .logout {
    margin: -20px 0 20px;
    font-size: .8em;
    text-align: center;
  }

  .brazil {
    display: block;
    margin-top: 10px;
    font-size: 1.2em;
  }

  .addthis {
    margin: 0 auto 20px;
    width: 245px;
  }

  .hashtag {
    text-align: center;  
    text-shadow: 1px 1px 2px #000;
  }

.content {
  float: right;
  width: 600px;
  text-shadow: 2px 2px 3px #000;
}

  .index {
    margin: 100px 0 150px;
  }

    .index h1 {
      font-size: 1.6em;
    }

    .index h2 {
      font-size: 2.6em;
      color: #FC0;
    }

    .index ul {
      max-width: 580px;
    }

      .index li {
        display: inline-block;
        margin: 1px;
        border: 2px solid #FC0;
        -webkit-border-radius: 27px 27px 27px 27px;
           -moz-border-radius: 27px 27px 27px 27px;
                border-radius: 27px 27px 27px 27px;
        width: 50px;
        height: 50px;
        overflow: hidden;
      }

        .brazilian {
          display: block;
          width: 50px;
          height: 50px;
          cursor: pointer;
        }

        .people {
          font-size: 1.2em;
          font-weight: bold;
          color: #FC0;
        }

  .disclaimer {
    margin: 100px 0;
  }

    .disclaimer p {
      max-width: 580px;
      font-size: 1.4em;
      line-height: 1.5em;
    }
