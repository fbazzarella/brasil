body {
  background: fixed url('<%= image_path('background.jpg') %>') center top;
  font-family: 'Bariol', sans-serif;
  color: #FFF;
}

a,
a:active,
a:visited,
a:hover {
  color: #FFF;
}

a:hover {
  text-decoration: none;
}

.container {
  margin: 0 auto;
  width: 1000px;
}

.pull-right {
  background: rgba(0,0,0,.7);
  float: right;
  margin-top: 10px;
  padding: 20px;
}

.pull-right a {
  display: block;
}

.pull-right .idea {
  margin-top: 20px;
  font-size: 1.2em;
  text-align: center;
  text-shadow: 1px 1px 2px #000;
}

.content {
  text-shadow: 2px 2px 3px #000;
}

.index, .disclaimer {
  margin: 100px 0;
}

.index h1 {
  font-size: 1.6em;
}

.index h2 {
  font-size: 2.6em;
  color: #FC0;
}

ul {
  list-style: none;
  padding: 0;
  max-width: 580px;
}

li {
  display: inline-block;
  border: 2px solid #FC0;
  -webkit-border-radius: 27px 27px 27px 27px;
     -moz-border-radius: 27px 27px 27px 27px;
          border-radius: 27px 27px 27px 27px;
  width: 50px;
  height: 50px;
  overflow: hidden;
}

.brazilian {
  display: block;
  width: 50px;
  height: 50px;
  cursor: pointer;
}

.people {
  font-size: 1.2em;
  font-weight: bold;
  color: #FC0;
}

.btn-custom {
  background-color: hsl(56, 100%, 45%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#fff789", endColorstr="#e5d600");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#fff789), to(#e5d600));
  background-image: -moz-linear-gradient(top, #fff789, #e5d600);
  background-image: -ms-linear-gradient(top, #fff789, #e5d600);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fff789), color-stop(100%, #e5d600));
  background-image: -webkit-linear-gradient(top, #fff789, #e5d600);
  background-image: -o-linear-gradient(top, #fff789, #e5d600);
  background-image: linear-gradient(#fff789, #e5d600);
  border-color: #e5d600 #e5d600 hsl(56, 100%, 37%);
  color: green !important;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.52);
  -webkit-font-smoothing: antialiased;

  -webkit-box-shadow: 0 0 30px rgba(0,0,0,1);
     -moz-box-shadow: 0 0 30px rgba(0,0,0,1);
          box-shadow: 0 0 30px rgba(0,0,0,1);

  padding: 40px;
  font-size: 1.4em;
  font-weight: bold;
  text-decoration: none !important;
}

.disclaimer p {
  max-width: 580px;
  font-size: 1.4em;
  line-height: 1.5em;
}